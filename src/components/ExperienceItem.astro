---
interface Props {
  title: string;
  empresa: string;
  description: string;
  date: string;
  link?: string;
}

const { title, empresa, description, date, link } = Astro.props;
---

<div class="relative border-l-2 border-[#007c7c] pl-6 pb-6">
  
  
  <!-- Indicador de posición -->
  <div class="absolute w-3 h-3 bg-[#007c7c] rounded-full -left-[7px] top-1/4 transform -translate-y-1/2"></div>

  <!-- Título -->
  <h3 class="text-xl font-bold text-[#007c7c] mt-1">
    {title}
  </h3>
  
  <!-- Empresa -->
  <p class="text-md font-semibold text-[#007c7c]">
    {empresa}
  </p>

  <!-- Fecha -->
  <time class="text-sm font-normal text-gray-500 dark:text-gray-400">
    {date}
  </time>
  
  <!-- Descripción -->
  <p class="my-2 text-base font-normal text-gray-700 dark:text-gray-300">
    {description}
  </p>
  
  
  
</div>
